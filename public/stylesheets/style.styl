/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 10px 10px
  color #fff
  margin-bottom 30px
  font-size 30px
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

header h1
	font-size 30px
	margin-top 3px

header a
	display block
	float left
	margin-left 20px
	margin-top 5px
	color #fff
	font-size 23px
	text-align center
	transition font-size 0.6s

header a:hover
	text-decoration none

.container-custom
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left

  p
    margin-bottom 20px

.content-body
	font-size 16px

.sidebar
  float right

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

    a
    	margin-left 10px
    	align center
    	

p
  line-height 1.8

#skill a
	color #337

#skill a:hover
	  text-decoration none

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
